		<property name="maxActive" value="50" />
		<property name="maxIdle" value="20" />
		<property name="minIdle" value="10" />
	</bean>
 	-->
 	
 	<!-- 自定义的用户管理 -->
	<bean id="myUserManager" class="demo.identity.MyUserManager" />
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<!-- 配置对象 -->
	<bean id="processEngineConfiguration" class="org.openwebflow.ProcessEngineConfigurationEx">
		<property name="dataSource" ref="dataSource" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="databaseSchemaUpdate" value="true" />
		<property name="jobExecutorActivate" value="false" />
		
		<!-- 自动部署 -->
		<property name="deploymentResources" value="./WEB-INF/models/*.bpmn" />
		<property name="deploymentMode" value="single-resource" />
		
		<!-- 自定义用户组成员关系 -->
		<property name="customMembershipManager" ref="myUserManager" />

		<!-- 自定义活动权限管理 -->
		<property name="activityPermissionServiceConfiguration">
			<bean
				class="org.openwebflow.permission.ActivityPermissionServiceConfiguration">
				<property name="loadPermissionsOnStartup" value="true" />
				<property name="activityPermissionService">
					<bean
						class="org.openwebflow.permission.impl.ActivityPermissionServiceImpl">
						<property name="permissionDao">
							<bean class="org.openwebflow.permission.impl.ActivityPermissionDaoImpl">
								<property name="sessionFactory" ref="sessionFactory" />
							</bean>
						</property>
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- processEngine -->
	<bean id="processEngine" class="org.activiti.spring.ProcessEngineFactoryBean">
		<property name="processEngineConfiguration" ref="processEngineConfiguration" />
	</bean>

	<!-- processEngineTool -->
	<bean id="processEngineTool" class="org.openwebflow.tool.impl.ProcessEngineToolImpl">
		<property name="processEngine" ref="processEngine" />
	</bean>
	
	<!-- 加载service和entity -->
	<context:component-scan base-package="demo.permission" />
	<tx:annotation-driven transaction-manager="transactionManager" />
	
</beans>